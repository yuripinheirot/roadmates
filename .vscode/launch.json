  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Roadmates API Debugger",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/api/dist/**/*.js"],
      "port": 9229,
      "restart": true,
      "remoteRoot": "/home/node/app",
      "cwd": "${workspaceFolder}/api",
      "localRoot": "${workspaceFolder}/api"
    }
  ]
}
