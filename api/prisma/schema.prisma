generator client {
  provider = "prisma-client-js"
}

generator fabbrica {
  provider = "prisma-fabbrica"
  output   = "../prisma/factory/generated/fabbrica"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id   String @id @default(uuid())
  name String

  rides Ride[]

  @@map("customers")
}

model Driver {
  id          String  @id @default(uuid())
  name        String
  description String
  vehicle     String
  review      Json
  value       Decimal
  minDistance Int     @map("min_distance")

  rides Ride[]

  @@map("drivers")
}

model Ride {
  id          String   @id @default(uuid())
  origin      String
  destination String
  distance    Int
  duration    String
  value       Decimal
  date        DateTime

  customer_id String
  driver_id   String

  customer Customer @relation(fields: [customer_id], references: [id])
  driver   Driver   @relation(fields: [driver_id], references: [id])

  @@map("rides")
}
