generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id   String @id @default(uuid())
  name String

  rides Ride[]
}

model Driver {
  id          String  @id @default(uuid())
  name        String
  description String
  vehicle     String
  review      Json
  value       Decimal
  minDistance Int     @map("min_distance")

  rides Ride[]
}

model Ride {
  id          String   @id @default(uuid())
  origin      String
  destination String
  distance    Int
  duration    String
  value       Decimal
  date        DateTime

  customerId String
  driverId   String

  customer Customer @relation(fields: [customerId], references: [id])
  driver   Driver   @relation(fields: [driverId], references: [id])
}
